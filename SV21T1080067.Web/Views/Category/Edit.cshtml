@using SV21T1080067.BusinessLayers
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post">
            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" />
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input type="text" name="@nameof(Model.CategoryName)" value="@Model.CategoryName" class="form-control"  autofocus>
                @Html.ValidationMessage("CategoryName")
            </div>


            <div class="form-group">
                <label>Mô tả:</label>
                <input type="text" name="@nameof(Model.Description)" value="@Model.Description" class="form-control" />
            </div>


            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floopy-o"></i>Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default"> Quay lại</a>
            </div>


        </form>

    </div>

</div>